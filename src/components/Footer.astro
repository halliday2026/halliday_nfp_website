---
import { Image } from 'astro:assets';
import logoSrc from '../assets/Logo.jpg';

const quickLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/services', label: 'Services' },
  { href: '/assessment', label: 'Assessment' },
  { href: '/resources', label: 'Resources' },
  { href: '/contact', label: 'Contact' },
];
---

<footer class="bg-[var(--color-primary-dark)] text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10 lg:gap-16">

      <!-- Brand column -->
      <div class="md:col-span-1">
        <a href="/" aria-label="Halliday home" class="inline-block mb-4">
          <Image
            src={logoSrc}
            alt="Halliday"
            width={120}
            height={40}
            class="h-9 w-auto object-contain brightness-0 invert"
          />
        </a>
        <p class="text-white/70 text-sm leading-relaxed">
          Technology for mission-driven evaluation.
        </p>
      </div>

      <!-- Quick links -->
      <div>
        <h3 class="font-semibold text-sm uppercase tracking-wider text-white/50 mb-4">
          Quick Links
        </h3>
        <ul class="space-y-2" role="list">
          {
            quickLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-white/70 hover:text-[var(--color-accent)] text-sm transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact CTA -->
      <div>
        <h3 class="font-semibold text-sm uppercase tracking-wider text-white/50 mb-4">
          Get in Touch
        </h3>
        <p class="text-white/70 text-sm leading-relaxed mb-5">
          Ready to modernize your evaluation workflow? Let's talk.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 bg-[var(--color-accent)] hover:bg-[var(--color-accent-hover)] text-white px-5 py-2.5 rounded-full text-sm font-semibold transition-colors"
        >
          Book a Free Workflow Review
        </a>
        <p class="mt-4 text-white/50 text-sm">
          <a href="mailto:chris@hallidayinc.com" class="hover:text-white/80 transition-colors">
            chris@hallidayinc.com
          </a>
        </p>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-white/10 flex flex-col sm:flex-row justify-between items-center gap-4 text-sm text-white/40">
      <p>&copy; 2026 Halliday. All rights reserved.</p>
      <p>Technology Consulting for Nonprofit Evaluation</p>
    </div>
  </div>
</footer>
